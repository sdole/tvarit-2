<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>tvarit</groupId>
    <artifactId>tomcat-plugin-test</artifactId>
    <version>1.0.1-SNAPSHOT</version>
    <packaging>war</packaging>
    <distributionManagement>
        <repository>
            <id>local-test-releases</id>
            <url>file://C:/users/sachi_000/dev/tvarit/mvn_repo</url>
        </repository>
        <snapshotRepository>
            <id>local-test-snapshot</id>
            <url>file://C:/tmp/mvn_repo</url>
        </snapshotRepository>
    </distributionManagement>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.target>1.8</maven.compiler.target>
        <maven.compiler.source>1.8</maven.compiler.source>
        <version.javax.enterprise>1.2</version.javax.enterprise>
        <version.javax.inject>1</version.javax.inject>
    </properties>
    <dependencyManagement>
        <dependencies>
        </dependencies>
    </dependencyManagement>
    <dependencies>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>javax.servlet-api</artifactId>
            <version>3.1.0</version>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.6</version>
            </plugin>
        </plugins>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>io.tvarit</groupId>
                    <artifactId>tvarit-maven-plugin</artifactId>
                    <version>0.1.2-SNAPSHOT</version>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
    <profiles>
        <profile>
            <id>makeinfra</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>io.tvarit</groupId>
                        <artifactId>tvarit-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>execute-base-infrastructure</id>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>make-base-infrastructure</goal>
                                </goals>
                                <configuration>
                                    <availability-zones>us-east-1a,us-east-1c</availability-zones>
                                    <ssh-key-pair-name>trelair</ssh-key-pair-name>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>deploy-app</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>io.tvarit</groupId>
                        <artifactId>tvarit-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>deploy</id>
                                <goals>
                                    <goal>deploy-app</goal>
                                </goals>
                                <phase>deploy</phase>
                                <configuration>
                                    <ssh-key-name>trelair</ssh-key-name>
                                    <db-version>1.0.0</db-version>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>