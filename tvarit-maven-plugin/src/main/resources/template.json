{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Resources": {
    "VpcIPAssoc": {
      "Type": "AWS::EC2::EIPAssociation",
      "Properties": {
        "InstanceId": {
          "Ref": "AppServer"
        },
        "AllocationId": "eipalloc-27787743"
      }
    },
    "AppServer": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "ImageId": "ami-0d61c466",
        "InstanceType": "t2.micro",
        "SubnetId": {
          "Fn::Select": [
            0,
            {
              "Ref": "publicSubnets"
            }
          ]
        },
        "KeyName": {
          "Ref": "keyName"
        },
        "IamInstanceProfile": {
          "Ref": "tvaritInstanceProfile"
        },
        "SecurityGroupIds": [
          {
            "Ref": "sgId"
          }
        ],
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "",
              [
                "#!/bin/bash -v\n",
                "/opt/aws/bin/cfn-init -v -s ",
                {
                  "Ref": "AWS::StackName"
                },
                " --region us-east-1 ",
                " --role ",
                {
                  "Ref": "tvaritRole"
                },
                " -r ",
                " AppServer ",
                " -c ",
                " main ",
                "\n",
                "/opt/aws/bin/cfn-signal -e 0 -r \"AppServer setup complete\"",
                "\n"
              ]
            ]
          }
        }
      },
      "Metadata": {
        "AWS::CloudFormation::Designer": {
          "id": "87161bad-9eaa-44ae-a5bd-fecbcfec37fd"
        },
        "AWS::CloudFormation::Authentication": {
          "S3AccessCreds": {
            "type": "S3",
            "buckets": [
              {
                "Ref": "bucketName"
              }
            ],
            "roleName": {
              "Ref": "tvaritRole"
            }
          }
        },
        "AWS::CloudFormation::Init": {
          "configSets": {
            "main": [
              "makeLogDir",
              "downloadWar",
              "startTomcat"
            ]
          },
          "makeLogDir": {
            "commands": {
              "01": {
                "command": [
                  "mkdir",
                  "/var/log/tomcat8"
                ]
              },
              "02": {
                "command": [
                  "chown",
                  "tomcat:tomcat",
                  "/var/log/tomcat8"
                ]
              }
            }
          },
          "downloadWar": {
            "files": {
              "/var/lib/tomcat8/webapps/tvarit.war": {
                "source": {
                  "Ref": "warFileUrl"
                },
                "owner": "tomcat",
                "group": "tomcat",
                "mode": "000755",
                "authentication": "S3AccessCreds"
              }
            }
          },
          "startTomcat": {
            "commands": {
              "03": {
                "command": [
                  "/etc/init.d/tomcat8",
                  "start"
                ]
              }
            }
          }
        }
      }
    }
  },
  "Parameters": {
    "projectName": {
      "Type": "String",
      "Description": "Enter a name for your project. This will be used as part of resource names and tags.",
      "AllowedPattern": "[A-Za-z]*",
      "MinLength": "1"
    },
    "publicSubnets": {
      "Type": "CommaDelimitedList",
      "Description": "Two Subnets where app server should be started."
    },
    "bucketName": {
      "Type": "String",
      "Description": "The bucket where code, config and lambda will be stored."
    },
    "sgId": {
      "Type": "String",
      "Description": "The security group id to use for starting instance."
    },
    "keyName": {
      "Type": "String",
      "Description": "The name of private key which can be used for SSH access."
    },
    "tvaritInstanceProfile": {
      "Type": "String",
      "Description": "The IAM role that will be used for all tvarit instances."
    },
    "tvaritRole": {
      "Type": "String",
      "Description": "The IAM role  that this instance will assume."
    },
    "warFileUrl": {
      "Type": "String",
      "Description": "The url where the war file is saved."
    }
  },
  "Description": "",
  "Metadata": {
    "AWS::CloudFormation::Designer": {
      "2f76a794-6086-49e0-82dc-f2e1c0f816b4": {
        "size": {
          "width": 60,
          "height": 60
        },
        "position": {
          "x": 60,
          "y": 90
        },
        "z": 1,
        "embeds": []
      },
      "87161bad-9eaa-44ae-a5bd-fecbcfec37fd": {
        "size": {
          "width": 60,
          "height": 60
        },
        "position": {
          "x": 60,
          "y": 90
        },
        "z": 1,
        "embeds": []
      }
    }
  }
}